{
	"name": "@egjs/visible",
	"version": "2.4.0",
	"description": "A class that checks if an element is visible in the base element or viewport.",
	"main": "dist/visible.js",
	"es2015": "src/Visible.js",
	"scripts": {
		"start": "webpack-dev-server --open",
		"build": "webpack --env production  && webpack --env packaged ",
		"test": "karma start",
		"test:chrome": "karma start --chrome",
		"lint": "eslint src",
		"jsdoc": "rm -rf ./doc && jsdoc -c jsdoc.json",
		"coverage": "karma start --coverage",
		"demo:start": "npm run demo:prebuild-latest && npm run demo:updateVersion && jekyll serve --host=0.0.0.0 -s demo",
		"demo:build": "npm run demo:updateVersion && jekyll build -s demo",
		"demo:prebuild-version": "cpx 'dist/**/*' demo/release/$npm_package_version/dist --clean && cpx 'doc/**/*' demo/release/$npm_package_version/doc --clean",
		"demo:prebuild-latest": "cpx 'dist/**/*' demo/release/latest/dist --clean && cpx 'doc/**/*' demo/release/latest/doc --clean",
		"demo:deploy": "npm run build && npm run jsdoc && npm run demo:prebuild-version && npm run demo:prebuild-latest && npm run demo:build && gh-pages -d demo/_site --add --remote upstream",
		"demo:updateVersion": "echo $npm_package_version > demo/_data/version.yml",
		"demo:setup": "cpx 'node_modules/@egjs/common-demo/**/*' 'demo/' && rm demo/package.json",
		"coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
		"release": "release-helper upstream",
		"changelog": "node ./config/changelog.js",
		"prepush": "npm run lint",
		"commitmsg": "node config/validate-commit-msg.js"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/naver/egjs-visible"
	},
	"author": {
		"name": "NAVER Corp."
	},
	"namespace": {
		"eg": "eg"
	},
	"license": "MIT",
	"homepage": "https://naver.github.io/egjs-visible/",
	"bugs": {
		"url": "https://github.com/naver/egjs-visible/issues"
	},
	"dependencies": {
		"@egjs/component": "^2.1.0"
	},
	"devDependencies": {
		"@egjs/common-demo": "github:naver/egjs#common-demo",
		"@egjs/release-helper": "0.0.3",
		"babel-core": "^6.26.0",
		"babel-loader": "^7.1.2",
		"babel-plugin-add-module-exports": "^0.2.1",
		"babel-plugin-transform-es3-member-expression-literals": "^6.22.0",
		"babel-plugin-transform-es3-property-literals": "^6.22.0",
		"babel-plugin-transform-object-assign": "^6.22.0",
		"babel-preset-es2015": "^6.24.1",
		"chai": "^4.1.2",
		"chalk": "^2.1.0",
		"clean-webpack-plugin": "^0.1.17",
		"coveralls": "^3.0.0",
		"cpx": "^1.5.0",
		"egjs-jsdoc-template": "1.4.0",
		"eslint": "^4.8.0",
		"eslint-config-naver": "^2.0.1",
		"eslint-loader": "^1.9.0",
		"eslint-plugin-import": "^2.7.0",
		"fs-extra": "^4.0.2",
		"gh-pages": "^1.0.0",
		"husky": "^0.14.3",
		"inject-loader": "^3.0.1",
		"iscroll": "^5.2.0",
		"istanbul-instrumenter-loader": "^3.0.0",
		"jquery": "^3.2.1",
		"jsdoc": "^3.6.6",
		"karma": "^1.7.1",
		"karma-chai": "^0.1.0",
		"karma-chrome-launcher": "^2.2.0",
		"karma-coverage-istanbul-reporter": "^1.3.0",
		"karma-html2js-preprocessor": "^1.1.0",
		"karma-mocha": "^1.3.0",
		"karma-mocha-reporter": "^2.2.4",
		"karma-sinon": "^1.0.5",
		"karma-sourcemap-loader": "^0.3.7",
		"karma-webpack": "^2.0.5",
		"lite-fixture": "^1.0.2",
		"mocha": "^4.0.1",
		"sinon": "^4.0.1",
		"string-replace-webpack-plugin": "0.1.3",
		"sync-exec": "^0.6.2",
		"uglifyjs-webpack-plugin": "^0.4.6",
		"webpack": "^3.6.0",
		"webpack-dev-server": "^2.9.1",
		"webpack-merge": "^4.1.0",
		"write-file-webpack-plugin": "^4.2.0",
		"xml2js": "^0.4.19"
	}
}
